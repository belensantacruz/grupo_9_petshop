                <div class="dropdown-menu">
                    <button class="dropdown-btn">ACCESORIOS</button>
                    <div class="dropdown-content">
                        <a href="#">1</a>
                        <a href="#">1</a>
                        <a href="#">1</a>
                    </div>
                </div>
    
                <div class="dropdown-menu">
                    <button class="dropdown-btn">SALUD</button>
                    <div class="dropdown-content">
                        <a href="#">1</a>
                        <a href="#">1</a>
                        <a href="#">1</a>
