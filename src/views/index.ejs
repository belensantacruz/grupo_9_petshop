<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <%- include('./partials/header') %> 
    <main>
        <div class="carrusel">
            <div class="imagenes-carrusel">
                <ul class="carruselImages">
                    <li><img src="/images/banner1.png" alt="Imagen banner 1" class="activeSlide"></li>
                    <li><img src="/images/banner2.jpg" alt="Imagen banner 2"></li>
                    <li><img src="/images/banner3.jpg" alt="Imagen banner 3"></li>
                </ul>
            </div>
            <div class="arrows">
                <button class="prev">&lt;</button>
                <button class="next">&gt;</button>
            </div>
            <div class="dots">
                <span class="dot"></span>
                <span class="dot"></span>
                <span class="dot"></span>
            </div>
        </div>
        <section class="articulos-destacados">
            <div class="titulo-articulos">
                <h1>Publicaciones destacadas</h1>
                <div class="articulos-arrows">
                    <p class="button-articulos">&lt;</p>
                    <p class="button-articulos active">&gt;</p>
                </div>
            </div>
            <div class="articulos">
                
                    <% destacado.forEach(element => {%>
                    <article>  
                        <a href="/products/detalle/<%= element.id %>">
                        <img src="/images/products/<%= element.image %>" alt="Imagen Producto 1"></a>
                        <p class="precio"><%= element.price %></p>
                        <div class="detalles-producto">
                            <div class="botones-compras">
                                <div class="botones-cantidad">
                                    <button class="minus">-</button>
                                    <input type="text" value="0" readonly="readonly">
                                    <button class="plus">+</button>
                                </div>
                                <a href="/products/carrito"><button class="comprar-button">Comprar</button></a>
                            </div>
                            <p class="descripcion-articulo"><%= element.name %></p>
                        </div>
                    </article>  
                    <% }); %>
            </div>
        </section>
        <section class="articulos-ofertas">
            <div class="titulo-articulos">
                <h1>Ofertas imperdibles!</h1>
                <div class="articulos-arrows">
                    <div class="articulos-arrows">
                        <p class="button-articulos">&lt;</p>
                        <p class="button-articulos active">&gt;</p>
                    </div>
                </div>
            </div>
            <div class="articulos">
                <% oferta.forEach(element => {%>
                    <article>  
                        <a href="/products/detalle/<%= element.id %>">
                        <img src="/images/products/<%= element.image %>" alt="Imagen Producto 1"></a>
                        <p class="precio"><%= element.price %></p>
                        <div class="detalles-producto">
                            <div class="botones-compras">
                                <div class="botones-cantidad">
                                    <button type="button" class="minus">-</button>
                                    <input type="text" value="0" readonly="readonly">
                                    <button type="button" class="plus">+</button>
                                </div>
                                <a href="/products/carrito"><button class="comprar-button">Comprar</button></a>
                            </div>
                            <p class="descripcion-articulo"><%= element.name %></p>
                        </div>
                    </article>  
                    <% }); %>
            </div>
        </section>
    </main>
    <%- include('./partials/footer') %>
    <script src="/js/carrusel.js" type="text/javascript"></script>
    <script src="/js/contadorProductos.js" type="text/javascript"></script>
    <script src="/js/activeArticle.js" type="text/javascript"></script>
</body>
</html>