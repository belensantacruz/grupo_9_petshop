<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main>

        <div class="dashboard-btn">
          <div>
            <a href="http://localhost:3000" target="_blank"><button>Dashboard</button></a>
          </div>
        </div>

      <div class="crud-table">
    <table>
        <tr>
          <th>ID</th>
          <th>Nombre de producto</th>
          <th>Descripción</th>
          <th>Categoría</th>
          <th>Precio</th>
          <th>Status</th>
          <th>Rating</th>
          <th>Stock</th>
          <th>Imagen</th>
          <th class="columnPrueba" colspan="2"><a href="/products/agregarProducto">Agregar Item</a></th>
        </tr>
        <% productos.forEach(item => { %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.description %></td>
            <td><%= categorias[item.category_id - 1].name %></td>
            <td>$<%= item.price %></td>
            <td><%= item.status %></td>
            <td><%= item.rating %> </td>
            <td><%= item.stock %> </td>
            <td><img src="/images/products/<%= item.image %>" alt="Imagen Producto <%= item.id %>"></td>
            <td><a href="/products/editarProducto/<%= item.id %>">Editar</a></td>
            <form action="/products/editarProducto/<%= item.id %>?_method=DELETE" method="POST">
              <td><div class="div-button"><button type="submit">Borrar</button></div></td>
            </form>
          </tr>
        <% }); %>
      </table>
    </div>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>